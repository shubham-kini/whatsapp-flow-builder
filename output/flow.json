{
  "version": "7.2",
  "data_api_version": "3.0",
  "routing_model": {
    "SERVICES": [
      "SUMMARY"
    ]
  },
  "screens": [
    {
      "terminal": true,
      "id": "SERVICES",
      "title": "Demo Foundation",
      "data": {
        "main_choice_arr": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "title": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "metadata": {
                "type": "string"
              }
            }
          },
          "__example__": [
            {
              "id": "1",
              "title": "Yoga Sessions",
              "description": "Join relaxing yoga classes for beginners",
              "metadata": "service_yoga"
            },
            {
              "id": "2",
              "title": "Meditation Workshop",
              "description": "Learn guided meditation techniques",
              "metadata": "service_meditation"
            },
            {
              "id": "3",
              "title": "Nutrition Guidance",
              "description": "Get diet and wellness advice",
              "metadata": "service_nutrition"
            }
          ]
        }
      },
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextHeading",
            "text": "Welcome to Demo Foundation âœ¨"
          },
          {
            "type": "RadioButtonsGroup",
            "name": "service_name",
            "label": "Choose a demo option ðŸ‘‡",
            "required": true,
            "data-source": "${data.main_choice_arr}"
          },
          {
            "type": "Footer",
            "label": "Continue",
            "on-click-action": {
              "name": "data_exchange",
              "payload": {
                "selected_service": "${form.service_name}"
              }
            }
          }
        ]
      }
    },
    {
      "id": "SUMMARY",
      "title": "Demo Summary",
      "terminal": true,
      "success": true,
      "data": {
        "summary_arr": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "__example__": [
            "Service: Yoga Sessions",
            "Guide: Priya Sharma",
            "Session: Morning Yoga - 7 AM",
            "Date: Oct 15, 2025",
            "Duration: 60 mins",
            "Price: INR 499",
            "Availability: Every Monday & Wednesday",
            "Payment Link: [Click Here](https://rzp.io/l/DemoYoga)"
          ]
        },
        "selections": {
          "type": "object",
          "properties": {
            "Service": {
              "type": "string"
            },
            "Guide": {
              "type": "string"
            },
            "Session": {
              "type": "string"
            },
            "Date": {
              "type": [
                "string",
                "null"
              ]
            },
            "Duration": {
              "type": "string"
            },
            "Price": {
              "type": "string"
            },
            "Availability": {
              "type": "string"
            },
            "Payment Link": {
              "type": "string"
            }
          },
          "__example__": {
            "Service": "Yoga Sessions",
            "Guide": "Priya Sharma",
            "Session": "Morning Yoga - 7 AM",
            "Date": "2025-10-15",
            "Duration": "60 mins",
            "Price": "INR 499",
            "Availability": "Every Monday & Wednesday",
            "Payment Link": "[Click Here](https://rzp.io/l/DemoYoga)"
          }
        }
      },
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "RichText",
            "text": "${data.summary_arr}"
          },
          {
            "type": "Footer",
            "label": "Submit",
            "on-click-action": {
              "name": "data_exchange",
              "payload": {
                "selected_service": "${screen.SERVICES.form.service_name}",
                "selections": "${data.selections}"
              }
            }
          }
        ]
      }
    }
  ]
}